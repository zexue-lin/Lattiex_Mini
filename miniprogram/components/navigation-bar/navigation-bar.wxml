<!-- weui-navigation-bar.wxml -->

<!-- ✅ 分支1：cover-view 版本（用于盖住原生组件） -->
<block wx:if="{{useCover}}">
	<cover-view class="weui-navigation-bar {{extClass}} {{fixed ? 'weui-navigation-bar--fixed' : ''}}">
		<cover-view class="weui-navigation-bar__inner {{ios ? 'ios' : 'android'}}" style="color: {{color}}; background: {{ bgComputed || background }}; {{displayStyle}}; {{innerPaddingRight}}; {{safeAreaTop}};">
			<!-- 左侧按钮 -->
			<cover-view class="weui-navigation-bar__left" style="{{leftWidth}};">
				<block wx:if="{{back || homeButton}}">
					<!-- 返回上一页 -->
					<block wx:if="{{back}}">
						<cover-view class="weui-navigation-bar__buttons weui-navigation-bar__buttons_goback">
							<cover-view bindtap="back" class="weui-navigation-bar__btn_goback_wrapper" hover-class="weui-active" hover-stay-time="100" aria-role="button" aria-label="返回">
								<cover-view class="weui-navigation-bar__button weui-navigation-bar__btn_goback"></cover-view>
							</cover-view>
						</cover-view>
					</block>
					<!-- 返回首页 -->
					<block wx:if="{{homeButton}}">
						<cover-view class="weui-navigation-bar__buttons weui-navigation-bar__buttons_home">
							<cover-view bindtap="home" class="weui-navigation-bar__btn_home_wrapper" hover-class="weui-active" aria-role="button" aria-label="首页">
								<cover-view class="weui-navigation-bar__button weui-navigation-bar__btn_home"></cover-view>
							</cover-view>
						</cover-view>
					</block>
				</block>
				<block wx:else>
					<slot name="left"></slot>
				</block>
			</cover-view>

			<!-- 标题 -->
			<cover-view class="weui-navigation-bar__center">
				<cover-view wx:if="{{loading}}" class="weui-navigation-bar__loading" aria-role="alert">
					<cover-view class="weui-loading" aria-role="img" aria-label="加载中"></cover-view>
				</cover-view>
				<block wx:if="{{title}}">
					<cover-view><text>{{title}}</text></cover-view>
				</block>
				<block wx:else>
					<slot name="center"></slot>
				</block>
			</cover-view>

			<!-- 右侧留空 -->
			<cover-view class="weui-navigation-bar__right">
				<slot name="right"></slot>
			</cover-view>
		</cover-view>
	</cover-view>

	<!-- ✅ 固定时的占位元素 -->
	<view wx:if="{{fixed && !overlayContent}}" style="height: {{placeholderHeight}}px;"></view>
</block>

